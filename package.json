{
  "name": "scrabbleio-monorepo",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"npm:client:dev\" \"npm:server:dev\"",
    "client:dev": "npm --prefix client run dev",
    "server:dev": "npm --prefix server run dev",
    "build": "npm --prefix client run build",
    "start": "node server/index.js",
    "game:start": "npm --prefix server run start",
    "postinstall": "npm --prefix client install && npm --prefix server install"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3"
  }
}
